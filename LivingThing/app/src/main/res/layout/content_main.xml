<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:dividerPadding="6dp"
    android:weightSum="1"
    tools:showIn="@layout/activity_main"
    android:backgroundTintMode="src_atop"
    android:background="@drawable/bg_art">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_weight="0.15">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="89dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:paddingLeft="16dp"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Soil level:"
                android:id="@+id/soilLabel"
                android:textColor="@color/white"
                android:layout_weight="0.1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/valueViewSoil"
                android:textColor="@color/white"
                android:layout_weight="0.95"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/indicatorImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/im_loading"
            android:layout_weight="0"
            android:paddingTop="16dp" />

        <!--<ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageFlower"
            android:src="@drawable/im_flower"
            android:layout_weight="0.30"
            android:paddingTop="70dp" />-->

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="20dp"
        android:background="@android:color/background_light"
        android:elevation="6dp"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginRight="20dp"
        android:layout_weight="0.08">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Soil moisture value:"
                android:id="@+id/moistureLabel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Temperature:"
                android:id="@+id/tempLabel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Humidity:"
                android:id="@+id/humidityLabel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Light:"
                android:id="@+id/lightLabel" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/valueViewMoisture" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/valueViewTemp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/valueViewHumidity" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/valueViewLight" />
        </LinearLayout>
    </LinearLayout>



    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="View history charts"
        android:id="@+id/chartsButton"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.15"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/ic_show_chart_white_24dp"
        android:paddingLeft="30dp"
        android:background="@drawable/round_btn_light"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Watch your plant live"
        android:id="@+id/liveCamButton"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.20"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/ic_videocam_white_24dp"
        android:paddingLeft="30dp"
        android:background="@drawable/round_btn_dark"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

</LinearLayout>
